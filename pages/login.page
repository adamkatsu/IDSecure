<section class="login">
  <div class="container login-cont">
    <img class="advantages-cont-bg" src="https://images.squarespace-cdn.com/content/6625ebbf1b804068858b53b4/91670330-b331-4c01-8612-2c0f30fe4114/id-dex-adv-bg.png?content-type=image%2Fpng" alt="">
    <div class="login-head">
      <h2 class="uppercase">Login For Support</h2>
      <p>Customer login to submit and track support requests.</p>
    </div>
    <div class="login-form-wrapper">
      <form action="/api/auth/login" method="POST">
        <label for="email">Email*</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          placeholder="Enter Your Email"
          required
        >
        <label for="password">Password*</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="Password"
          required
        >
        <button class="button-primary" type="submit" style="width: 120px;">LOGIN</button>
    </form>
    </div>
  </div>
  
</section>