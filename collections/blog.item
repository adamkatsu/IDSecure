<script>console.log({@|json-pretty})</script>

<section class="blog-return">
  <div class="container blog-return-cont">
    <button class="btn-return">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span>Back</span>
    </button>
  </div>
</section>




{.section item}

<section class="blog-head">
  <div class="container blog-head-cont">
    <img src="{assetUrl}" alt="">
  </div>
</section>

<section class="blog-main">
  <div class="container blog-main-cont">
    <div class="blog-main-title">
      <span class="blog-main-tag">{tags.0}</span>
      <h1 class="h1">{title}</h1>
      <span>{addedOn|date %b %d, %Y}</span>
    </div>
    <div class="blog-main-content">{body}</div>
  </div>
</section>

{.end}


{.section item}

  <!--WRAPPER-->
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->
    <h1 class="title" data-content-field="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        {title}
      {.end}
    </h1>

    <!--AUTHOR AND DATE-->
    <p class="meta">
      <a href="{fullUrl}" class="permalink"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a>
    </p>

    <!--MAIN CONTENT-->
    {body}

    <!--BLOG INJECTION-->
    {postItemInjectCode}

    <!--CATEGORIES-->
    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--TAGS-->
    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--SHARE AND LIKE-->
    {@|like-button}
    {@|social-button}


    <!--LOCATION-->
    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->
    {@|comments}

  </article>

{.end}


<!--PAGINATION-->
{.section pagination}
  <nav class="blog-item-pagination">

    <!--NEWER PAGE-->
    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!--OLDER PAGE-->
    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}

<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    if(window.location.href.includes('blog')) {
      console.log('url true')
      document.querySelector('.site-container').style.overflow = "visible";
    }
  });
</script>