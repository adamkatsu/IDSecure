
<section class="about-hero">
    <div class="container hero-cont about-hero-cont">
        <div class="h1-wrapper">
            <h1><squarespace:block-field id="pressPageH1"/></h1>
        </div>
        <div class="p-wrapper">
            <p><squarespace:block-field id="pressPageSubTitle"/></p>
        </div>
    </div>
</section>
<section class="press-links">
    <div class="container press-links-cont">
        <div class="press-links-item">
            <div class="press-links-icon"><squarespace:block-field id="pressLinkIcon1"/></div>
            <div class="press-links-text"><squarespace:block-field id="pressLinkText1"/></div>
        </div>
        <div class="press-links-item">
            <div class="press-links-icon"><squarespace:block-field id="pressLinkIcon2"/></div>
            <div class="press-links-text link-underline"><squarespace:block-field id="pressLinkText2"/></div>
        </div>
        <div class="press-links-item">
            <div class="press-links-icon"><squarespace:block-field id="pressLinkIcon3"/></div>
            <div class="press-links-text"><squarespace:block-field id="pressLinkText3"/></div>
        </div>
        <div class="press-links-item">
            <div class="press-links-icon"><squarespace:block-field id="pressLinkIcon4"/></div>
            <div class="press-links-text link-underline"><squarespace:block-field id="pressLinkText4"/></div>
        </div>
    </div>
</section>
<section class="press-grid">
    <div class="container">
      <div class="press-grid-cont">
        {.repeated section items}
          <div class="press-grid-item">
            <a href="{fullUrl}" class="press-grid-item-inner">
              <div class="press-grid-category">
                <div class="p">{categories}</div>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 18L18 6M18 6H10M18 6V14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="press-grid-title">{title}</div>
              <div class="press-grid-date">{addedOn|date %A, %B %d}</div>
            </a>
          </div>
        {.end}
      </div>
    </div>
</section>